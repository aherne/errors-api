<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<xml>
  <application default_route="default" default_format="html" version="1.0.0">
    <paths controllers="tests/mocks/controllers" views="tests/mocks/views" reporters="tests/mocks/reporters" resolvers="tests/mocks/resolvers"/>
    <display_errors>
      <local>1</local>
    </display_errors>
  </application>
  <resolvers>
    <resolver format="html" content_type="text/html" class="HtmlRenderer" charset="UTF-8"/>
  </resolvers>
  <routes>
  	<route id="default" http_status="500" error_type="LOGICAL" view="500"/>
    <route id="Test\Lucinda\STDERR\PathNotFoundException" controller="PathNotFoundController" http_status="404" error_type="CLIENT" view="404"/>
  </routes>
  <reporters>
    <local>
      <reporter class="FileReporter" path="errors" format="%d %m"/>
    </local>
  </reporters>
</xml>
